# ==============================================
# TRAVELAGENTIC MASTER CONFIGURATION
# Single source of truth for all services
# Copy this to .env and fill in your values
# ==============================================

# ==============================================
# AI INTEGRATION
# ==============================================

# OpenAI (Primary AI Provider)
OPENAI_API_KEY=your_openai_key_here

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Development Configuration
USE_MOCK_APIS=true
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================
# LANGGRAPH SERVICE CONFIGURATION  
# ==============================================

# Service URLs (Docker will override with container names)
LANGGRAPH_URL=http://localhost:8000
WEBSERVER_URL=http://localhost:3000
ENABLE_LANGGRAPH=true

# LangGraph Development Settings
PYTHON_ENV=development
LOG_LEVEL=INFO

# ==============================================
# DATABASE & BACKEND
# ==============================================

# Database (Local PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/travelagentic
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=travelagentic
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Supabase (Cloud Database & Auth)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# ==============================================
# INFRASTRUCTURE
# ==============================================

# Redis (Caching)
REDIS_URL=redis://localhost:6379

# ==============================================
# TRAVEL APIS
# ==============================================

# Amadeus API (Primary Travel API)
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
AMADEUS_ENVIRONMENT=test

# Additional Travel APIs (Optional)
TEQUILA_API_KEY=your_tequila_key
BOOKING_API_KEY=your_booking_key
VIATOR_API_KEY=your_viator_key
WEATHER_API_KEY=your_weather_key

# ==============================================
# PAYMENTS & COMMUNICATION
# ==============================================

# Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Voice & Communication (Optional)
TWILIO_ACCOUNT_SID=your_twilio_sid
ELEVENLABS_API_KEY=your_elevenlabs_key

# ==============================================
# BROWSER AUTOMATION
# ==============================================

# Browser Automation
BROWSER_USE_HEADLESS=true
AUTOMATION_USER_AGENT=TravelAgentic/1.0

# ==============================================
# DEVELOPMENT & DEBUGGING
# ==============================================

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false
